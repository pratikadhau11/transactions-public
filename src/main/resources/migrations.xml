<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="pratik">
        <createTable tableName="accounts">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="bigint" defaultValue="0"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="pratik">
        <createTable tableName="transactions">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="from" type="bigint"/>
            <column name="to" type="bigint"/>
            <column name="amount" type="bigint" defaultValue="0"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="pratik">
        <addForeignKeyConstraint
                baseColumnNames="from"
                baseTableName="transactions"
                constraintName="fk_from_transactions_accounts"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="accounts"/>
    </changeSet>
    <changeSet id="4" author="pratik">
        <addForeignKeyConstraint
                baseColumnNames="to"
                baseTableName="transactions"
                constraintName="fk_to_transactions_accounts"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="accounts"/>
    </changeSet>

    <changeSet author="pratik" id="5">
        <sql dbms="h2, oracle"
             endDelimiter="\nGO"
             splitStatements="true"
             >
            insert into accounts (id, name, balance) values ('1', 'tom', 1000000);insert into accounts (id, name, balance) values ('2', 'ann', 1000000)

        </sql>
    </changeSet>
</databaseChangeLog>
